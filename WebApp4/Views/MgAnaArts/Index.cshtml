<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.MgaaMbdcClasse)*@
                Class
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.MgaaMatricola)*@
                Code
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.MgaaDescr)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Description</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.MgaaNote)*@
                Note
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.MgaaDataIns)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Date Ins</a>
