            <th>
                @*@Html.DisplayNameFor(model => model.MgaaDataUltMod)*@
                Date Mod
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MgaaMbdcClasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MgaaMatricola)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MgaaDescr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MgaaNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MgaaDataIns)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MgaaDataUltMod)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MgaaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MgaaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MgaaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>